<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar" />

    <Button
        android:id="@+id/b_contactos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar contactos" />

    <Button
        android:id="@+id/b_imagenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar imagenes" />

    <Button
        android:id="@+id/b_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="seleccionar audio" />

    <Button
        android:id="@+id/b_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar video" />
</LinearLayout>